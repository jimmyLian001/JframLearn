<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baofu.international.global.account.core.dal.mapper.UserInfoMapper">
    <resultMap id="BaseResultMap" type="com.baofu.international.global.account.core.dal.model.UserInfoDo">
        <id column="ID" jdbcType="BIGINT" property="id"/>
        <result column="USER_NO" jdbcType="BIGINT" property="userNo"/>
        <result column="USER_INFO_NO" jdbcType="BIGINT" property="userInfoNo"/>
        <result column="CREATE_AT" jdbcType="TIMESTAMP" property="createAt"/>
        <result column="CREATE_BY" jdbcType="VARCHAR" property="createBy"/>
        <result column="UPDATE_AT" jdbcType="TIMESTAMP" property="updateAt"/>
        <result column="UPDATE_BY" jdbcType="VARCHAR" property="updateBy"/>
        <result column="USER_TYPE" jdbcType="TINYINT" property="userType"/>
    </resultMap>

    <resultMap id="BaseResultMap2" type="com.baofu.international.global.account.core.dal.model.user.UserQualifiedRespDo">
        <result column="USER_NO" jdbcType="BIGINT" property="userNo"/>
        <result column="NAME" jdbcType="VARCHAR" property="name"/>
        <result column="userType" jdbcType="TINYINT" property="userType"/>
        <result column="REALNAME_STATUS" property="realnameStatus" jdbcType="TINYINT" />
        <result column="USER_INFO_NO" jdbcType="BIGINT" property="userInfoNo"/>
        <result column="QUALIFIED_NO" jdbcType="BIGINT" property="qualifiedNo"/>
    </resultMap>

    <sql id="Base_Column_List">
        USER_NO,
        USER_INFO_NO,
        CREATE_AT,
        CREATE_BY,
        UPDATE_AT,
        UPDATE_BY,
        USER_TYPE
    </sql>
    <select id="selectByKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from T_USER_INFO
        where ID = #{id,jdbcType=BIGINT}
    </select>

    <select id="selectByApplyNo" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from T_USER_INFO
        where USER_INFO_NO = #{userInfoNo,jdbcType=BIGINT}
    </select>

    <insert id="insert" parameterType="com.baofu.international.global.account.core.dal.model.UserInfoDo">
        insert into T_USER_INFO (
        ID,
        USER_NO,
        USER_INFO_NO,
        CREATE_AT,
        CREATE_BY,
        UPDATE_AT,
        UPDATE_BY,
        USER_TYPE)
        values (
        #{id,jdbcType=BIGINT},
        #{userNo,jdbcType=BIGINT},
        #{userInfoNo,jdbcType=BIGINT},
        NOW(),
        #{createBy,jdbcType=VARCHAR},
        NOW(),
        #{updateBy,jdbcType=VARCHAR},
        #{userType,jdbcType=INTEGER})
    </insert>

    <select id="selectByUserNo" resultMap="BaseResultMap">
        /**TUserInfoMapper.selectByUserNo*/
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        T_USER_INFO
        WHERE
        USER_NO = #{userNo,jdbcType=BIGINT}
    </select>

    <!-- 根据查询条件查询资质信息 -->
    <select id="selectAllByCondition" resultMap="BaseResultMap2">
        SELECT * FROM (
          SELECT QUALIFIED_NO,USER_NO, NAME, 2 AS userType, REALNAME_STATUS, o.USER_INFO_NO, o.CREATE_AT  FROM  T_USER_ORG o
          LEFT JOIN T_ACC_QUALIFIED u ON u.USER_INFO_NO = o.USER_INFO_NO
          UNION
          SELECT QUALIFIED_NO,USER_NO, NAME, 1 AS userType, REALNAME_STATUS, p.USER_INFO_NO, p.CREATE_AT  FROM  T_USER_PERSONAL p
          LEFT JOIN T_ACC_QUALIFIED u ON u.USER_INFO_NO = p.USER_INFO_NO) a
        <where>
            REALNAME_STATUS = 1
            <if test="userNo != null">
                AND USER_NO = #{userNo,jdbcType=BIGINT}
            </if>
            <if test="userType != null">
                AND userType = #{userType,jdbcType=TINYINT}
            </if>
        </where>
        ORDER BY CREATE_AT DESC
        <if test="pageSize != 0">
            LIMIT #{pageNo},#{pageSize}
        </if>
    </select>


    <!-- 根据查询条件查询资质记录数 -->
    <select id="countAllByCondition" resultType="java.lang.Integer">
        SELECT count(1) FROM (
            SELECT USER_NO, NAME, 2 AS userType, REALNAME_STATUS, o.USER_INFO_NO, o.CREATE_AT  FROM  T_USER_ORG o
            LEFT JOIN T_ACC_QUALIFIED u ON u.USER_INFO_NO = o.USER_INFO_NO
            UNION
            SELECT USER_NO, NAME, 1 AS userType, REALNAME_STATUS, p.USER_INFO_NO, p.CREATE_AT  FROM  T_USER_PERSONAL p
            LEFT JOIN T_ACC_QUALIFIED u ON u.USER_INFO_NO = p.USER_INFO_NO) a
        <where>
            REALNAME_STATUS = 1
            <if test="userNo != null">
                AND USER_NO = #{userNo,jdbcType=BIGINT}
            </if>
            <if test="userType != null">
                AND userType = #{userType,jdbcType=TINYINT}
            </if>
        </where>
    </select>
</mapper>