    <dubbo:reference id="userPersonalFacadeImpl"
                     interface="com.baofu.international.global.account.core.facade.UserPersonalFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!--企业认证信息服务-->
    <dubbo:reference id="userOrgFacadeImpl"
                     interface="com.baofu.international.global.account.core.facade.UserOrgFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!--银行卡管理服务-->
    <dubbo:reference id="userBankCardFacadeImpl"
                     interface="com.baofu.international.global.account.core.facade.UserBankCardFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

