                     interface="com.baofu.international.global.account.core.facade.TaccountPhoneNoFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!--交易信息查询-->
    <dubbo:reference id="tradeQueryFacade"
                     interface="com.baofu.international.global.account.core.facade.TradeQueryFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>
