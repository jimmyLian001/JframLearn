                     interface="com.baofu.international.global.account.core.facade.UserWithdrawApiFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!--用户店铺信息-->
    <dubbo:reference id="userStoreRegisterFacade"
                     interface="com.baofu.international.global.obtain.facade.UserStoreRegisterFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!--用户基本信息校验接口-->
    <dubbo:reference id="userInfoCheckFacade"
                     interface="com.baofu.international.global.account.core.facade.UserInfoCheckFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>
</beans>
