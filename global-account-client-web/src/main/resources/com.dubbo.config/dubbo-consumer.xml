<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 关闭所有服务检查 -->
    <dubbo:consumer check="false"/>
    <dubbo:application name="global-account-client"/>
    <dubbo:registry protocol="zookeeper" address="${zookeeper.server.address}"
                    file="/tmp/global-account-client/dubbo-registry/dubbo-registry.properties"/>

    <dubbo:reference id="userPwdFacade"
                     interface="com.baofu.international.global.account.core.facade.UserPwdFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <dubbo:reference id="applyAccountServiceImpl"
                     interface="com.baofu.international.global.account.core.facade.ApplyAccountFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!--卡bin操作接口-->
    <dubbo:reference id="cardBinFacade"
                     interface="com.baofu.international.global.account.core.facade.CardBinFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!--认证操作接口-->
    <dubbo:reference id="accountAuthFacade"
                     interface="com.baofu.international.global.account.core.facade.AccountAuthFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!--注册-->
    <dubbo:reference id="registerServiceImpl"
                     interface="com.baofu.international.global.account.core.facade.RegisterFacade"
                     timeout="60000"
                     version="${global.dubbo.version}"/>

    <!-- 用户登录服务 -->
    <dubbo:reference id="userLoginFacadeImpl"
                     interface="com.baofu.international.global.account.core.facade.UserLoginFacade"
