<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
       default-lazy-init="false">

    <dubbo:application name="globalaccount-service"/>

    <dubbo:registry protocol="zookeeper" address="${zookeeper.server.address}" timeout="15000"
                    file="/tmp/global-account-core/dubbo-registry/dubbo-registry.properties"/>
    <dubbo:protocol name="dubbo" port="-1"/>

    <!-- 境外账号申请 -->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.ApplyAccountFacade" retries="0"
                   ref="applyAccountServiceImpl"
                   timeout="30000"
                   executes="100"
                   version="lzd_1.0.0"/>
    <!-- 用户 -->
    <dubbo:service id="userFacade"
                   interface="com.baofu.international.global.account.core.facade.user.UserFacade"
                   ref="userServiceImpl"
                   version="lzd_1.0.0"/>

    <!-- 机构 -->
    <dubbo:service id="orgFacade"
                   interface="com.baofu.international.global.account.core.facade.user.OrgFacade"
                   ref="orgServiceImpl"
                   version="lzd_1.0.0"/>

    <!-- 用户银行卡 -->
    <dubbo:service id="userBankCardFacade"
                   interface="com.baofu.international.global.account.core.facade.user.UserBankCardFacade"
                   ref="userBankCardServiceImpl"
                   version="lzd_1.0.0"/>

    <!--用户客户信息服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserPwdFacade"
                   ref="userPwdFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--用户安全问题服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserSecrueqaInfoFacade"
                   ref="userSecrueqaInfoFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--用户注册手机号管理服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.TaccountPhoneNoFacade"
                   ref="taccountPhoneNoFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--注册接口-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.RegisterFacade"
                   ref="registerServiceImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--卡bin操作服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.CardBinFacade"
                   ref="cardBinFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--认证操作服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.AccountAuthFacade"
                   ref="accountAuthFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--用户登录服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserLoginFacade"
                   ref="userLoginFacadeImpl"
                   retries="0"
                   timeout="6000"
                   version="lzd_1.0.0"/>

    <!--验证码服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.SendVerifyCodeFacade"
                   ref="sendVerifyCodeServiceImpl"
                   retries="0"
                   timeout="6000"
                   version="lzd_1.0.0"/>

    <!--绑定银行卡服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserBankCardFacade"
                   ref="userBankCardFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--支付信息服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserPayPwdFacade"
                   ref="userPayPwdFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--交易查询服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.TradeQueryFacade"
                   ref="tradeQueryFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--用戶店铺账户服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserStoreAccountFacade"
                   ref="userStoreAccountServiceImpl"
                   retries="0"
                   timeout="60000"
                   version="lzd_1.0.0"/>

    <!--省市地区查询服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.AreaInfoFacade"
                   ref="areaInfoFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--用戶提现服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserWithdrawFacade"
                   ref="userWithdrawFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--个人认证信息服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserPersonalFacade"
                   ref="userPersonalFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--企业用户信息服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserOrgFacade"
                   ref="userOrgFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--职业信息服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.OccupationInfoFacade"
                   ref="occupationInfoFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--经营类别信息服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.ManagerCategoryInfoFacade"
                   ref="managerCategoryInfoFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--定时任务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserJobFacade"
                   ref="userJobFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>
    <!-- 提现费率服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.WithdrawRateFacade"
                   ref="withdrawRateServiceImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--用户提现查询接口-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserWithdrawQueryFacade"
                   ref="userWithdrawQueryFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--用户结汇申请处理接口-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserWithdrawApiFacade"
                   ref="userWithdrawApiFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--提现明细查询服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.WithdrawDetailsQueryFacade"
                   ref="withdrawDetailsQueryFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--资质校验服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.UserInfoCheckFacade"
                   ref="userInfoCheckFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>

    <!--用户账户申请查询服务-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.user.UserApplyAccQueryFacade"
                   ref="userApplyAccQueryServiceImpl"
                   retries="0"
                   version="lzd_1.0.0"/>


    <!--收款账户收支明细-->
    <dubbo:service interface="com.baofu.international.global.account.core.facade.AccountPaymentDetailFacade"
                   ref="accountPaymentDetailFacadeImpl"
                   retries="0"
                   version="lzd_1.0.0"/>
</beans>
